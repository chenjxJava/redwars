<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenjx.redwars.dao.UploadLogDao">
    <resultMap id="BaseResultMap" type="com.chenjx.redwars.domain.UploadLog">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="isDelete" property="isDelete"/>
    </resultMap>


    <sql id="Base_Column_List">
        id, name, path, isDelete
    </sql>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from uploadLog
        where id = #{id}
    </select>

    <select id="findAllUploadLog" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from uploadLog
    </select>

    <insert id="saveUploadLog" useGeneratedKeys="true" keyProperty="id">
        insert into
        uploadLog(name, path, isDelete)
        values
        (#{name},#{path},0)
    </insert>


    <delete id="deleteUploadLog" parameterType="java.lang.Long">
        UPDATE uploadLog
        set isDelete = 1
        where
        id = #{id}
    </delete>
</mapper>
